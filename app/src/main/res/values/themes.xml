<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:navigationBarColor">@color/purple_700</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_500</item>
        <item name="colorOnPrimaryContainer">@color/purple_600</item>
        <item name="colorPrimaryInverse">@color/purple_700</item>
        <item name="colorSecondary">@color/purple_800</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/purple_600</item>
        <item name="colorOnSecondaryContainer">@color/purple_700</item>
        <item name="colorTertiary">@color/purple_800</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/purple_800</item>
        <item name="colorOnTertiaryContainer">@color/purple_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="textInputStyle">@style/mTextInput</item>
        <item name="shapeAppearanceSmallComponent">@style/mShapeSmall</item>


    </style>
    <style name="Theme.SpaceApp.Load" >
        <item name="android:windowBackground">@drawable/load</item>
    </style>
</resources>